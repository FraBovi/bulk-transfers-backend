      "program": "${fileDirname}",
      "env": {
        "TESTCONTAINERS_RYUK_DISABLED": "true",
      },
      "buildFlags": [
        "-tags=integration"
      ],
      "args": [
        "-test.v",
        "-test.run",
        "TestIntegration"
      ]
    },
    {
      "type": "java",
      "name": "Spring Boot-BulkTransferApplication<bulk-transfer-application>",
      "request": "launch",
